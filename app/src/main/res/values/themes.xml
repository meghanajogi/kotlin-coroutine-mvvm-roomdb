<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kotlincoroutinemvvmroomdb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="userNameTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_45sdp</item>
        <item name="android:layout_marginLeft">@dimen/_40sdp</item>
        <item name="android:background">@drawable/login_edittext_background</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="passwordTheme" parent="userNameTheme">
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
    </style>
    <style name="loginButtonTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginRight">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="android:layout_marginLeft">@dimen/_40sdp</item>
        <item name="android:background">@drawable/login_button_background</item>
    </style>
</resources>